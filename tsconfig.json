{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../old/temperature-chart.tsx",
    "../../old/_api.ts",
    "../../old/localStorageService.ts",
    "../../old/hook/_useRoaster.ts",
    "../../old/hook/useRoasterControls.ts",
    "../../old/hook/useRoasterMonitoring.ts",
    "../../old/hook/useRoasterSession.ts",
    "../../old/hook/useRoasterState.ts",
    "../../old/hook/useRoasterSync.ts",
    "../../old/useTemperatureHandling.ts"
  ],
  "exclude": ["node_modules"]
}
